#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define HOST_OS 1
#include "helper.h"
#include "german.dtsi"

#define ___ &none

&sk {  // sticky-key config
    release-after-ms = <450>;  // release after 0.6s
    quick-release;             // no double capitalization when rolling keys
};

&sl {  // sticky-layer config
    ignore-modifiers;          // allow chording sticky mods & layers
};

&lt {  // layer-tap config
    flavor = "balanced";
    tapping-term-ms = <50>;
    quick-tap-ms = <50>;
};

&mt {
    flavor = "tap-preferred";
    tapping-term-ms = <120>;
    quick-tap-ms = <120>;
};

/ {
    combos {
        compatible = "zmk,combos";
        combo_esc {
            timeout-ms = <100>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
        };
    };

    behaviors {

    tda: tap_dance_a {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <50>;
            bindings = <&kp A>, <&de_ae>;
        };


};


#define DEFAULT 0
