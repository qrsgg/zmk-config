/ {
   macros {
      de_ae: unicode_ae {
         compatible = "zmk,behavior-macro";
         label = "ä";
         #binding-cells = <0>;
         wait-ms = <40>;
         tap-ms = <40>;
         bindings = <
         &macro_press   &kp LCTRL &kp LSHIFT
         &macro_tap     &kp U &kp N0 &kp N0 &kp E &kp N4
         &macro_release &kp LCTRL &kp LSHIFT
         &kp ENTER
         >;
      };

