/ {
   macros {
      de_ae: unicode_ae {
         compatible = "zmk,behavior-macro";
         label = "ä";
         wait-ms = <40>;
         tap-ms = <40>;
         bindings = <
         &macro_press   &kp LCTRL &kp LSHIFT
         &macro_tap     &kp U &kp 0 &kp 0 &kp E &kp 4  // U+00E4
         &macro_release &kp LCTRL &kp LSHIFT
         &kp ENTER
         >;
      };

      de_oe: unicode_oe {
         compatible = "zmk,behavior-macro";
         label = "ö";
         wait-ms = <40>;
         tap-ms = <40>;
         bindings = <
         &macro_press   &kp LCTRL &kp LSHIFT
         &macro_tap     &kp U &kp 0 &kp 0 &kp F &kp 6  // U+00F6
         &macro_release &kp LCTRL &kp LSHIFT
         &kp ENTER
         >;
      };

      de_ue: unicode_ue {
         compatible = "zmk,behavior-macro";
         label = "ü";
         wait-ms = <40>;
         tap-ms = <40>;
         bindings = <
         &macro_press   &kp LCTRL &kp LSHIFT
         &macro_tap     &kp U &kp 0 &kp 0 &kp FC        // U+00FC
         &macro_release &kp LCTRL &kp LSHIFT
         &kp ENTER
         >;
      };

      de_eszett: unicode_sz {
         compatible = "zmk,behavior-macro";
         label = "ß";
         wait-ms = <40>;
         tap-ms = <40>;
         bindings = <
         &macro_press   &kp LCTRL &kp LSHIFT
         &macro_tap     &kp U &kp 0 &kp 0 &kp DF        // U+00DF
         &macro_release &kp LCTRL &kp LSHIFT
         &kp ENTER
         >;
      };

      de_euro: unicode_euro {
         compatible = "zmk,behavior-macro";
         label = "€";
         wait-ms = <40>;
         tap-ms = <40>;
         bindings = <
         &macro_press   &kp LCTRL &kp LSHIFT
         &macro_tap     &kp U &kp 2 &kp 0 &kp A &kp C     // U+20AC
         &macro_release &kp LCTRL &kp LSHIFT
         &kp ENTER
         >;
      };
   };
};
